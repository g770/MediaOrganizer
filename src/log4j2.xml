<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d [%t] %-5level: %msg%n%throwable}"/>
        </Console>
<!--
        <File name="FileOutput" fileName="e:\output.log">
            <PatternLayout pattern="%highlight{%d [%t] %-5level: %msg%n%throwable}"/>
        </File>
-->

    </Appenders>
    <Loggers>
        <Logger name="Main" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
            <!--
            <AppenderRef ref="FileOutput"/>
            -->
        </Logger>
        <Logger name="ChecksumBuilder" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
            <!--
            <AppenderRef ref="FileOutput"/>
            -->
        </Logger>
        <Logger name="DeduplicateFiles" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
            <!--
            <AppenderRef ref="FileOutput"/>
            -->
        </Logger>
        <Logger name="DateOrganizer" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
            <!--
            <AppenderRef ref="FileOutput"/>
            -->
        </Logger>
        <Root level= "error">
            <AppenderRef ref="Console"/>
            <!--
            <AppenderRef ref="FileOutput"/>
            -->
        </Root>
    </Loggers>
</Configuration>